<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
   android:layout_margin="10dp"
    android:background="@drawable/round_corners"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="115dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        app:srcCompat="@android:drawable/ic_menu_crop"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/tvConfTitle"
        android:layout_marginVertical="2dp"
        android:fontFamily="serif"
        android:text="Conference Title"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:visibility="visible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/tvConfHost"
        android:layout_marginVertical="2dp"
        android:fontFamily="serif"
        android:text="Conference Host"
        android:textSize="20sp"
        android:textColor="#33691E"
        android:textStyle="bold"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/tvConfDescription"
        android:layout_marginVertical="2dp"
        android:text="Description"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:textColor="#4A148C"
        android:textStyle="bold"
        android:visibility="visible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/tvConfSpeakers"
        android:layout_marginVertical="2dp"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:textColor="#D32F2F"
        android:textStyle="bold"
        android:text="Speakers"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/tvConfOtherInfo"
        tools:text="Other Info!"
        android:layout_marginVertical="2dp"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:textColor="@color/cardview_dark_background"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvConfDate"
        style="@style/TextAppearance.AppCompat.Medium"
        android:fontFamily="serif"
        android:textSize="18sp"
        android:textColor="#1A237E"
        android:layout_marginLeft="10dp"
        android:visibility="visible"
        android:text="Date"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvConfTime"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:textColor="#1A237E"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:text="Time"
            />

    </LinearLayout>



</LinearLayout>