<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    android:layout_margin="10dp"
    android:background="@drawable/round_corners"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/tvSavedConfTitle"
        android:layout_marginVertical="2dp"
        android:fontFamily="serif"
        android:text="Conference Title"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:visibility="visible"
        />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/tvSavedConfDescription"
        android:layout_marginVertical="2dp"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:textColor="#D32F2F"
        android:textStyle="bold"
        android:text="Description"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSavedConfDate"
        style="@style/TextAppearance.AppCompat.Medium"
        android:fontFamily="serif"
        android:textSize="18sp"
        android:textColor="#1A237E"
        android:layout_marginLeft="10dp"
        android:visibility="visible"
        android:text="Date"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tvSavedConfTime"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:textColor="#1A237E"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:text="Time"
            />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/tvSavedConfAttendees"
        android:layout_marginVertical="2dp"
        android:text="Attendees List:"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:textColor="#546E7A"
        android:textStyle="bold"
        android:visibility="visible"
        />

</LinearLayout>